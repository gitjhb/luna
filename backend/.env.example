# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=AI Companion API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://yourdomain.com"]

# ============================================================================
# Database (PostgreSQL)
# ============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_companion
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# ============================================================================
# Redis
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Vector Database
# ============================================================================
VECTOR_DB_PROVIDER=chromadb  # Options: 'pinecone' or 'chromadb'

# Pinecone Configuration (if using Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=ai-companion-memories

# ChromaDB Configuration (if using ChromaDB)
CHROMADB_PERSIST_DIR=/var/lib/chromadb

# ============================================================================
# LLM APIs
# ============================================================================
# xAI Grok API
XAI_API_KEY=your-xai-api-key
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta
XAI_TIMEOUT=60

# OpenAI API (for embeddings)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Firebase Authentication
# ============================================================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json

# ============================================================================
# Celery (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================================================
# Payment Providers
# ============================================================================
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Apple In-App Purchase
APPLE_IAP_SHARED_SECRET=your-apple-shared-secret

# Google Play
GOOGLE_PLAY_SERVICE_ACCOUNT_PATH=/path/to/google-play-service-account.json

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # Options: 'json' or 'text'

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_FREE=5
RATE_LIMIT_PREMIUM=30
RATE_LIMIT_VIP=100

# ============================================================================
# Credits Configuration
# ============================================================================
# Daily credit limits by tier
DAILY_CREDITS_FREE=10.0
DAILY_CREDITS_PREMIUM=100.0
DAILY_CREDITS_VIP=500.0

# Cost per 1000 tokens (in credits)
COST_PER_1K_TOKENS=0.10

# Tier discounts (multipliers)
DISCOUNT_PREMIUM=0.7  # 30% discount
DISCOUNT_VIP=0.5      # 50% discount

# ============================================================================
# Content Moderation
# ============================================================================
MODERATION_ENABLED=True
MODERATION_USE_OPENAI=False

# ============================================================================
# Monitoring & Error Tracking
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=False
