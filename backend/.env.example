# AI Companion Backend - Environment Variables
# Copy to .env and fill in your values

# ========== Application ==========
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your_secret_key_here_change_in_production

# ========== Mock Modes (set to false for production) ==========
MOCK_AUTH=true
MOCK_DATABASE=true
MOCK_REDIS=true
MOCK_LLM=true
MOCK_TTS=true
MOCK_IMAGE=true

# ========== Database (PostgreSQL for production) ==========
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_companion
DATABASE_URL=sqlite+aiosqlite:///./data/app.db

# ========== Redis ==========
REDIS_URL=redis://localhost:6379/0

# ========== LLM - xAI Grok ==========
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-beta

# ========== OpenAI (for embeddings) ==========
OPENAI_API_KEY=your_openai_api_key_here

# ========== Voice - 豆包 TTS (火山引擎) ==========
DOUBAO_APP_ID=your_app_id
DOUBAO_ACCESS_TOKEN=your_access_token
DOUBAO_CLUSTER=volcano_tts
DOUBAO_VOICE_TYPE=BV700_streaming

# ========== Vector Database ==========
VECTOR_DB_PROVIDER=chromadb
CHROMADB_PERSIST_DIR=./data/chromadb
# For Pinecone (production):
# VECTOR_DB_PROVIDER=pinecone
# PINECONE_API_KEY=your_pinecone_api_key

# ========== Firebase (production auth) ==========
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FORMAT=text
XAI_MODEL=grok-4-1-fast-non-reasoning
