{
  "expo": {
    "name": "Moon Shard",
    "slug": "luna-companion",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "luna",
    "userInterfaceStyle": "dark",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.luna.companion",
      "buildNumber": "2",
      "googleServicesFile": "./GoogleService-Info.plist",
      "usesAppleSignIn": true,
      "entitlements": {
        "com.apple.developer.in-app-payments": []
      },
      "infoPlist": {
        "NSCameraUsageDescription": "用于拍照分享给角色",
        "NSPhotoLibraryUsageDescription": "用于选择照片分享给角色",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "SKAdNetworkItems": [
          {
            "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork"
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.luna.companion",
      "versionCode": 1
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#8B5CF6",
          "sounds": []
        }
      ],
      [
        "react-native-iap",
        {
          "paymentProvider": "Apple"
        }
      ],
      "expo-apple-authentication",
      "@react-native-community/datetimepicker",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.1081215078404-67oravkof7blahfgsivjlka7uif3tsm4"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "074be23c-41ac-4c5e-86a2-c64ac88577e5"
      }
    },
    "owner": "hongbinj"
  }
}
